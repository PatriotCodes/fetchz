{
  "name": "simply-fetch",
  "version": "1.0.0",
  "description": "A very minimal wrapper over fetch api to make life easier :)",
  "main": "./lib/index.js",
  "files": [
    "/lib/index.js"
  ],
  "scripts": {
    "bundlesize": "bundlesize",
    "minify": "terser --module --compress --mangle toplevel build/index.js -o lib/index.js ",
    "build": "babel src/index.js -d build",
    "prepublishOnly": "npm run test && npm run build && npm run minify && npm run bundlesize",
    "test": "jest --verbose --coverage && jest-coverage-badges"
  },
  "jest": {
    "setupFiles": [
      "./src/setupTests.js"
    ],
    "coverageReporters": [
      "json-summary"
    ]
  },
  "bundlesize": [
    {
      "path": "./lib/index.js",
      "maxSize": "2 kB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PatriotCodes/simply-fetch.git"
  },
  "keywords": [
    "fetch",
    "async",
    "wrapper",
    "api",
    "call"
  ],
  "author": "atriukhan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatriotCodes/simply-fetch/issues"
  },
  "homepage": "https://github.com/PatriotCodes/simply-fetch#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "bundlesize": "^0.18.0",
    "jest": "^25.1.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-fetch-mock": "^3.0.1",
    "terser": "^4.6.3"
  }
}
