{
  "name": "simply-fetch",
  "version": "1.0.0",
  "description": "A very minimal wrapper over fetch api to make life easier :)",
  "main": "./lib/index.js",
  "files": [
    "/lib"
  ],
  "scripts": {
    "bundlesize": "bundlesize",
    "minify": "uglifyjs --compress --mangle --toplevel -o lib/index.js build/index.js",
    "build": "babel src -d build",
    "prepublishOnly": "npm run build && npm run minify && npm run bundlesize",
    "test": "jest --verbose"
  },
  "bundlesize": [
    {
      "path": "./lib/index.js",
      "maxSize": "3 kB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PatriotCodes/simply-fetch.git"
  },
  "keywords": [
    "fetch",
    "async",
    "wrapper",
    "api",
    "call"
  ],
  "author": "atriukhan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatriotCodes/simply-fetch/issues"
  },
  "homepage": "https://github.com/PatriotCodes/simply-fetch#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "bundlesize": "^0.18.0",
    "jest": "^25.1.0",
    "uglify-js": "^3.7.7"
  }
}
